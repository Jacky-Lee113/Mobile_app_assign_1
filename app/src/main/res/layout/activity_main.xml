<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    android:backgroundTint="@android:color/darker_gray"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="564dp"
        android:scrollbarSize="30dp"
        android:text="Mortgage Calculator"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="364dp"
        android:layout_height="30dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="520dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Mortgage amount"
        android:inputType="numberDecimal"
        android:onClick="clearTextNum1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="363dp"
        android:layout_height="30dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="227dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="474dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Tenure amount"
        android:inputType="numberDecimal"
        android:onClick="clearTextNum2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num3"
        android:layout_width="363dp"
        android:layout_height="30dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="428dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Interest rate (%)"
        android:inputType="numberDecimal"
        android:onClick="clearTextNum3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="356dp"
        android:layout_height="71dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="340dp"
        android:background="@android:color/white"
        android:text="Result"
        android:textColorLink="#673AB7"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="481dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="202dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="doMort"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>